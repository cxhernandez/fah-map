<% layout('layout') -%>
<div class="container" >
  <h1 class="form-signin-heading" align="center">Folding@home Map</h1>
  <br/>
  <div class="fah-map">
        <img src="./static/png/<%= png %>"></img>
  </div>
  <div class="form">
  <form class="form-signin" action="/" method="post">
    <label>Data from the past:</label>
    <select name="option" onchange="this.form.submit()">>
    <% for(var i=0; i<options.length; i++) { %>
       <option value="<%= options[i] %>"><%= options[i] %> days</option>
    <% } %>
    </select>
  </form>
</div>
</div>
